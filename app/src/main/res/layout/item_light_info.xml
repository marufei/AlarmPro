<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bac">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_light_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_4a"
            android:padding="15dp"/>

        <TextView
            android:id="@+id/item_light_info_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开"
            android:background="@drawable/bac_blue"
            android:layout_marginStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:textColor="@color/white"
            android:paddingBottom="3dp"/>

        <TextView
            android:id="@+id/item_light_info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关"
            android:background="@drawable/bac_org"
            android:layout_marginStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:textColor="@color/white"
            android:paddingBottom="3dp"/>
    </LinearLayout>
    <com.huikezk.alarmpro.views.GridViewForScrollView
        android:id="@+id/item_light_info_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:numColumns="6"/>
</LinearLayout>