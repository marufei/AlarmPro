<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingTop="15dp"
    android:paddingStart="15dp"
    android:paddingBottom="15dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_table_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/gray_4a"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/item_table_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_4a"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/item_table_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="2dp"
            android:text="0 Kw/h"
            android:textColor="@color/gray_9b"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_table_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/bac_blue"
            android:paddingLeft="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_table_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/bac_org"
            android:paddingLeft="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_table_refresh"
        android:layout_width="wrap_content"
        android:layout_marginStart="3dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_drawable_refresh"/>
</LinearLayout>