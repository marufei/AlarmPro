<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bac"
    tools:context="com.huikezk.alarmpro.activity.AlarmHistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/bj_top">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/alarm_history_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@mipmap/arrow_left_w"/>
            <TextView
                android:id="@+id/alarm_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/alarm_history_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-01-01"
                android:background="@drawable/time_bac"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="——"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/alarm_history_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-01-01"
                android:background="@drawable/time_bac"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/alarm_history_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/alarm_history_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="--暂无记录--"
        android:textSize="16sp"
        android:textColor="@color/gray_9b"
        android:gravity="center"/>
</LinearLayout>
