<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/item_fan_info_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/gray_4a"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_fan_info_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/vector_drawable_fan_close"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/item_fan_info_error"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="正常"
        android:padding="15dp"
        android:textColor="@color/gray_4a"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:layout_height="match_parent">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/item_fan_info_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开"
            android:background="@drawable/bac_blue"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:textColor="@color/white"
            android:paddingBottom="3dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/item_fan_info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关"
            android:background="@drawable/bac_org"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:textColor="@color/white"
            android:paddingBottom="3dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>