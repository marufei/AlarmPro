<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac"
    android:orientation="vertical"
    tools:context="com.huikezk.alarmpro.activity.AirInfoActivity">

    <include layout="@layout/view_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bac_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="温度读值"
                android:textColor="@color/gray_4a"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/air_info_arg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ℃"
                android:textSize="14sp"
                android:textColor="@color/gray_9b"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bac"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="湿度读值"
                android:textColor="@color/gray_4a"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/air_info_arg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 %"
                android:textSize="14sp"
                android:textColor="@color/gray_9b"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bac"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="CO₂读值"
                android:textColor="@color/gray_4a"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/air_info_arg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ppm"
                android:textSize="14sp"
                android:textColor="@color/gray_9b"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bac"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="TVOC读值"
                android:textColor="@color/gray_4a"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/air_info_arg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ppm"
                android:textSize="14sp"
                android:textColor="@color/gray_9b"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
